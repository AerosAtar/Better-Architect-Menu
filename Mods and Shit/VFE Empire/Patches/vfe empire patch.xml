<?xml version="1.0" encoding="utf-8" ?>
<Patch>   
<!-- LIGHTING -->
                <Operation Class="PatchOperationReplace">
                    <success>Always</success>
                    <xpath>Defs/ThingDef[defName="VFEE_Candelabra"]/designationCategory</xpath>
                    <value>
                        <designationCategory>Ferny_Lighting</designationCategory>
                    </value>
                </Operation>

<!-- BEDROOM -->
                <Operation Class="PatchOperationAdd">
                    <success>Always</success>
                    <xpath>Defs/ThingDef[defName="VFEE_RoyalMirror"]</xpath>
                    <value>
                        <designationCategory>Ferny_Bedroom</designationCategory>
                    </value>
                </Operation>
</Patch>