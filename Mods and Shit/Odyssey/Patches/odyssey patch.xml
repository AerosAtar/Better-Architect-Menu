<?xml version="1.0" encoding="utf-8" ?>
<Patch>              

<!-- ORBIT CATEGORY -->

    <Operation Class="PatchOperationReplace">
        <success>Always</success>
        <xpath>Defs/DesignationCategoryDef[defName="Ship"]/label</xpath>
        <value>
            <label>Space</label>
        </value>
    </Operation>
    <Operation Class="PatchOperationReplace">
        <xpath>Defs/*[designationCategory="Ship"]/designationCategory</xpath>
        <value>
        <designationCategory>Ferny_Space</designationCategory>
        </value>
    </Operation>
    <Operation Class="PatchOperationReplace">
        <success>Always</success>
        <xpath>Defs/DesignationCategoryDef[defName="Odyssey"]/order</xpath>
        <value>
            <order>7</order>
        </value>
    </Operation>
    <Operation Class="PatchOperationReplace">
        <success>Always</success>
        <xpath>Defs/DesignationCategoryDef[defName="Odyssey"]/label</xpath>
        <value>
            <label>Orbit</label>
        </value>
    </Operation>

    <Operation Class="PatchOperationAdd">
        <success>Always</success>
        <xpath>Defs/DesignationCategoryDef[defName="Odyssey"]</xpath>
        <value>
            <modExtensions>
            <li Class="BetterArchitect.NestedCategoryExtension">
                <parentCategory>Ship</parentCategory>
            </li>
            </modExtensions>
        </value>
    </Operation>

<!-- POWER GENERATION -->
                <Operation Class="PatchOperationReplace">
                    <success>Always</success>
                    <xpath>Defs/ThingDef[defName="GravcorePowerCell"]/designationCategory</xpath>
                    <value>
                        <designationCategory>Ferny_PowerGeneration</designationCategory>
                    </value>
                </Operation>


<!-- TRAPS -->
                <Operation Class="PatchOperationReplace">
                    <success>Always</success>
                    <xpath>Defs/ThingDef[defName="HunterDroneTrap"]/designationCategory</xpath>
                    <value>
                        <designationCategory>Ferny_Traps</designationCategory>
                    </value>
                </Operation>
</Patch>