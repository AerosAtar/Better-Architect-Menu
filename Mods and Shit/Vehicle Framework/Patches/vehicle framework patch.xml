<?xml version="1.0" encoding="utf-8" ?>
<Patch>              
<!-- ROAD ZONES -->
                <Operation Class = "PatchOperationAdd">
                    <xpath>Defs/DesignationCategoryDef[defName = "VF_Vehicles"]/specialDesignatorClasses</xpath>
                    <value>
                        <li>Vehicles.Designator_AreaRoadExpand</li>
                        <li>Vehicles.Designator_AreaRoadClear</li>
                    </value>
                </Operation>

<!-- VEHICLES PATCHES -->
                <Operation Class="PatchOperationReplace">
                    <success>Always</success>
                    <xpath>Defs/DesignationCategoryDef[defName="VF_Vehicles"]/label</xpath>
                    <value>
                        <label>Transport</label>
                    </value>
                </Operation>

<!-- CORE PATCHES -->
                <Operation Class="PatchOperationReplace">
                    <success>Always</success>
                    <xpath>Defs/ThingDef[defName="TransportPod"]/designationCategory</xpath>
                    <value>
                        <designationCategory>VF_Vehicles</designationCategory>
                    </value>
                </Operation>
                <Operation Class="PatchOperationReplace">
                    <success>Always</success>
                    <xpath>Defs/ThingDef[defName="PodLauncher"]/designationCategory</xpath>
                    <value>
                        <designationCategory>VF_Vehicles</designationCategory>
                    </value>
                </Operation>


                <Operation Class="PatchOperationConditional">
                <success>Always</success>
                    <xpath>/Defs/DesignationCategoryDef[defName="Ship"]/modExtensions</xpath>
                    <match Class="PatchOperationSequence">
                        <operations>
                            <li Class="PatchOperationReplace">
                                <success>Always</success>
                                <xpath>Defs/DesignationCategoryDef[defName="Ship"]/modExtensions</xpath>
                                <value>
                                    <modExtensions>
                                    <li Class="BetterArchitect.NestedCategoryExtension">
                                        <parentCategory>VF_Vehicles</parentCategory>
                                    </li>
                                    </modExtensions>
                                </value>
                            </li>
                        </operations>
                    </match>
                    <nomatch Class="PatchOperationSequence">
                        <operations>
                            <li Class="PatchOperationAdd">
                                <xpath>/Defs/DesignationCategoryDef[defName="Ship"]</xpath>
                                <value>
                                    <modExtensions>
                                    <li Class="BetterArchitect.NestedCategoryExtension">
                                        <parentCategory>VF_Vehicles</parentCategory>
                                    </li>
                                    </modExtensions>                                
                                </value>
                            </li>
                        </operations>
                    </nomatch>
                </Operation>
<!-- ROYALTY PATCHES -->
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Royalty</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>
				<li Class="PatchOperationReplace">
                    <success>Always</success>
                    <xpath>Defs/ThingDef[defName="ShipLandingBeacon"]/designationCategory</xpath>
                    <value>
                        <designationCategory>VF_Vehicles</designationCategory>
                    </value>
				</li>
			</operations>
		</match>
	</Operation>
</Patch>