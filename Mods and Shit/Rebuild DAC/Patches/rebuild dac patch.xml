<?xml version="1.0" encoding="utf-8" ?>
<Patch>   

<!-- LIGHTING -->
                <Operation Class="PatchOperationAdd">
                    <success>Always</success>
                    <xpath>Defs/ThingDef[defName="RB_FloorLamp"]</xpath>
                    <value>
                        <designationCategory>Ferny_Lighting</designationCategory>
                    </value>
                </Operation>

<!-- WALLS -->
                <Operation Class="PatchOperationReplace">
                    <success>Always</success>
                    <xpath>Defs/ThingDef[defName="RB_OverwallArmor"]/designationCategory</xpath>
                    <value>
                        <designationCategory>Ferny_Walls</designationCategory>
                    </value>
                </Operation>
                <Operation Class="PatchOperationReplace">
                    <success>Always</success>
                    <xpath>Defs/ThingDef[@Name="RB_WallBase"]/designationCategory</xpath>
                    <value>
                        <designationCategory>Ferny_Walls</designationCategory>
                    </value>
                </Operation>

<!-- HEATING -->
                <Operation Class="PatchOperationReplace">
                    <success>Always</success>
                    <xpath>Defs/ThingDef[defName="RB_Fireplace"]/designationCategory</xpath>
                    <value>
                        <designationCategory>Ferny_Heating</designationCategory>
                    </value>
                </Operation>
                <Operation Class="PatchOperationReplace">
                    <success>Always</success>
                    <xpath>Defs/ThingDef[defName="RB_OverwallFireplace"]/designationCategory</xpath>
                    <value>
                        <designationCategory>Ferny_Heating</designationCategory>
                    </value>
                </Operation>
</Patch>